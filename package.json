{
  "name": "blotter-api-elysia",
  "version": "1.0.0",
  "description": "Blotter Management System API - Elysia.js + Drizzle ORM",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun run db:push && echo 'Build complete'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "elysia": "^1.0.0",
    "@elysiajs/bearer": "^1.0.0",
    "@elysiajs/cors": "^1.0.0",
    "@elysiajs/swagger": "^1.0.0",
    "elysia-autoload": "^0.8.0",
    "drizzle-orm": "^0.30.0",
    "postgres": "^3.4.0",
    "@types/pg": "^8.11.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.20.0"
  }
}
